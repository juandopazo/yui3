{
    "json": {
        "use": [
            "json-parse",
            "json-stringify"
        ],

        "plugins": {
            "json-parse-shim": {
                "requires": [
                    "json-parse"
                ],
                "condition": {
                    "trigger": "json-parse",
                    "test": "parse-native-test.js",
                    "when": "instead"
                }
            },
            "json-stringify-shim": {
                "requires": [
                    "json-stringify"
                ],
                "condition": {
                    "trigger": "json-stringify",
                    "test": "stringify-native-test.js",
                    "when": "instead"
                }
            }
        },

        "submodules": {
            "json-parse": {
                "requires": [
                    "yui-base"
                ]
            },
            "json-stringify": {
                "requires": [
                    "yui-base"
                ]
            }
        }
    }
}
